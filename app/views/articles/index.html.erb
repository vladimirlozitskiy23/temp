<h3>Articles: </h3>
<% @articles.each do |article|%>
    <p>
        <%= article.title%>
    </p>

    <p>
        <%= article.body%>
    </p>
    <%= link_to 'Show', article_path(article)%>|<%= link_to 'Edit', edit_article_path(article)%>
    <p><%= button_to 'Delete',  article_path(article), data: {turbo: false}, method: :delete%></p>
    <hr/>
<% end %>
